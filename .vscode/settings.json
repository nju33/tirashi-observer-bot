{
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "emmet.includeLanguages": {
        "javascript": "javascriptreact",
        "typescript": "typescriptreact"
    },
    "eslint.enable": true,
    "eslint.format.enable": true,
    "eslint.packageManager": "yarn",
    "files.associations": {
        ".*.js": "javascript",
        ".{husky,lintstaged,renovate,stylelint,all-contributors}rc": "json"
    },
    "files.exclude": {
        "**/.gitpod": true
    },
    "files.watcherExclude": {
        "**/.gitpod/**": true
    },
    "javascript.suggestionActions.enabled": false,
    "jest.autoRun": { "watch": true, "onStartup": ["all-tests"] },
    // "jest.autoRun": { "watch": false, "onSave": "test-only" },
    "npm.packageManager": "yarn",
    "peacock.affectStatusBar": false,
    "peacock.color": "transparent",
    "peacock.remoteColor": "transparent",
    "plantuml.render": "PlantUMLServer",
    "plantuml.server": "http://localhost:8080",
    "search.exclude": {
        "**/.yarn": true,
        "**/.pnp.*": true
    },
    "stylelint.enable": false,
    "tslint.packageManager": "yarn",
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#1a1a1a00",
        "activityBar.activeBorder": "#606020",
        "activityBar.background": "#1a1a1a00",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#606020",
        "activityBarBadge.foreground": "#e7e7e7",
        "titleBar.activeBackground": "#00000000",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#00000099",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "typescript.tsc.autoDetect": "off",
    "grunt.autoDetect": "off",
    "jake.autoDetect": "off",
    "gulp.autoDetect": "off",
    "npm.autoDetect": "on",
    "eslint.lintTask.enable": false,
    "grammarly.files.include": ["**/README.md"]
}
